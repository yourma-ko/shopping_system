@using shopping_system.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Category>
@section title{

    <h3>Categories</h3>
}
@if(Model != null && Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Actions</th>
            
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td><a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id ="@item.CategoryId">Edit</a></td>

            </tr>
        }
    </table>
}
else
{
    <p>No Categories Found</p>
}

