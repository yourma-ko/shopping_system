
@model List<Category>
@section title{

    <h3>Categories</h3>
}
@if(Model != null && Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Actions</th>
            
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td><a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id ="@item.CategoryId">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="categories" asp-action="delete" asp-route-categoryid ="@item.CategoryId" onclick="return confirmDelete()">Delete</a></td>

            </tr>
        }
    </table>

}
else
{
    <p>No Categories Found</p>
}
<div class="row mb-3">
    <div class="col-6">
        <a class="btn btn-primary" asp-controller="categories" asp-action="add">Add</a>
        
    </div>

</div>
@section Scripts{
    <script>
        function confirmDelete() { 
            return confirm ("Are you sure you want to delete this category?");
        }
    </script>
}

